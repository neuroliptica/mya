<div class="reply-form" id="reply-form" style="display: none;">
  <form id="post-form">
    <input type="hidden" name="board" value="{{ .CurrentBoard.Link }}">
    <input type="hidden" name="parent" value="{{ .FormReply }}">
    <div class="form-raw">
      <input class="form-input-raw" type="text" id="subject" name="subject" placeholder="subject">
      <input class="form-input-raw" type="text" id="name" name="name" placeholder="name">
      <input id="submit" type="submit" name="submit" value="post" class="form-button">
    </div>
    <div class="form-raw">
      <textarea class="form-input-raw form-postarea" placeholder="max symbols: 5000" name="text"></textarea>
    </div>
    <div class="form-raw" id="form-sage">
      <div class="form-sage">
        <input id="sage" type="checkbox" name="sage" value="true">
        <span title="don't bump this thread">sage</span>
      </div>
      <input type="text" id="captcha_value" class="form-input-raw" name="captcha_value" placeholder="captcha">
    </div>
    <div class="form-raw">
      <input class="form-input-raw" type="file" name="files" multiple>
    </div>
  </form> 
</div>
